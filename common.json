{
  "plugins": [
    "jsdoc"
  ],
  "extends": [
    "plugin:jsdoc/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true
    }
  },
  "rules": {
    "arrow-spacing": [
      "warn",
      {
        "before": true,
        "after": true
      }
    ],
    "no-catch-shadow": "warn",
    "no-delete-var": "warn",
    "no-label-var": "warn",
    "no-shadow-restricted-names": "warn",
    "no-shadow": "error",
    "no-undef-init": "warn",
    "no-undef": "warn",
    "array-bracket-spacing": [
      "warn",
      "never",
      {
        "singleValue": true,
        "objectsInArrays": true,
        "arraysInArrays": true
      }
    ],
    "quotes": [
      1,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "eqeqeq": 0,
    "brace-style": [
      "warn",
      "1tbs"
    ],
    "object-property-newline": [
      "warn",
      {
        "allowAllPropertiesOnSameLine": false
      }
    ],
    "newline-per-chained-call": "warn",
    "curly": [
      "warn",
      "all"
    ],
    "comma-dangle": [
      "warn",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "comma-spacing": [
      "warn",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [
      "warn",
      "last"
    ],
    "eol-last": 0,
    "no-nested-ternary": 1,
    "no-trailing-spaces": "warn",
    "no-mixed-spaces-and-tabs": "warn",
    "padded-blocks": [
      "warn",
      "never"
    ],
    "space-before-blocks": 1,
    "space-before-function-paren": [
      1,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "spaced-comment": [
      "warn",
      "always",
      {
        "exceptions": [
          "-",
          "+"
        ],
        "markers": [
          "=",
          "!"
        ]
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 2
      }
    ],
    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ],
    "newline-after-var": 0,
    "no-multiple-empty-lines": "warn",
    "no-unused-vars": "error",
    "padding-line-between-statements": [
      1,
      {
        "blankLine": "always",
        "prev": "*",
        "next": "return"
      },
      {
        "blankLine": "always",
        "prev": [
          "const",
          "let",
          "var"
        ],
        "next": "*"
      },
      {
        "blankLine": "any",
        "prev": [
          "const",
          "let",
          "var"
        ],
        "next": [
          "const",
          "let",
          "var"
        ]
      },
      {
        "blankLine": "always",
        "prev": "directive",
        "next": "*"
      },
      {
        "blankLine": "any",
        "prev": "directive",
        "next": "directive"
      }
    ],
    "prefer-const": [
      "warn",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": true
      }
    ],
    "multiline-comment-style": [
      "warn",
      "separate-lines"
    ],
    "jsdoc/require-jsdoc": [1, {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true,
        "ArrowFunctionExpression": false
      }
    }],
    "jsdoc/require-returns-description": 0,
    "no-console": 0,
    "one-var": 0,
    "sort-keys": 0,
    "dot-notation": 0,
    "no-empty": 0,
    "object-curly-spacing": ["warn", "always"],
    "keyword-spacing": ["warn"],
    "jsdoc/tag-lines": ["warn", "any", {"startLines": 1}]
  },
  "globals":{
    "document": true,
    "module": true,
    "require": true,
    "window": true,
    "console" : true,
    "CustomEvent": true,
    "codex": true,
    "VERSION" : true,
    "Promise" : true,
    "MutationObserver": true,
    "FormData": true,
    "XMLHttpRequest": true,
    "Proxy": true,
    "DocumentFragment": true,
    "Symbol": true,
    "setTimeout": true,
    "clearTimeout": true,
    "Map": true,
    "FileReader": true,
    "logger": true,
    "global": true,
    "app": true,
    "process": true,
    "__dirname": true
  }
}
